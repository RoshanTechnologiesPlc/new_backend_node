  goalkeeping_diving: Number,
  goalkeeping_handling: Number,
  goalkeeping_kicking: Number,
  goalkeeping_positioning: Number,
  goalkeeping_reflexes: Number,
  // Assuming goalkeeping_speed is a mistake since it's NaN and not included.
  // Positions and ratings as strings might need parsing or separate handling.
  ls: String,
  st: String,
  rs: String,
  lw: String,
  lf: String,
  cf: String,
  rf: String,
  rw: String,
  lam: String,
  cam: String,
  ram: String,
  lm: String,
  lcm: String,
  cm: String,
  rcm: String,
  rm: String,
  lwb: String,
  ldm: String,
  cdm: String,
  rdm: String,
  rwb: String,
  lb: String,
  lcb: String,
  cb: String,
  rcb: String,
  rb: String,
  gk: String,
  index: Number,
  playerId:Number,
  is_processed_id:Boolean,

  playerName:{
    id: {type : Number ,required : false} , 
    amharicName: String,
    oromoName: String,
    tigrignaName: String,
    somaliName:String,
    englishName:String,
    name: { type: String, required: false },
    photo: { type: String, required: false },
    firstname:{type: String, required: false },
    lastname:{type: String, required: false },
    age:{type: Number, required: false }
  },
  teamName:{
    id: {type : Number ,required : false} , 
    amharicName: String,
    oromoName: String,
    tigrignaName: String,
    somaliName:String,
    englishName:String,
    photo: { type: String, required: false },

  },
});

const Player = mongoose.model('Player_rating', playerSchema);

module.exports = Player;
